{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": "packages",
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ESNext"],
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "importHelpers": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "ts-node": {
    "transpileOnly": true,
    "transpiler": "ts-node/transpilers/swc-experimental",
    "require": ["tsconfig-paths/register"]
  },
  "exclude": [
    "**/*/jest.config.js",
    "**/*/tailwind.config.js",
    "packages/frontend",
    "**/*/dist",
    "jest.config.js"
  ]
}
