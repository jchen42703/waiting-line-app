{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "composite": true,
    "noEmit": false,
    "jsx": "react",
    "tsBuildInfoFile": "../../.build-cache/ui.tsbuildinfo",
    "outDir": "./dist",
    "typeRoots": ["src/@types/assets"]
  },
  "include": ["src/**/*.ts", "tailwind.config.js", "__tests__/**/*.test.ts"],
  "exclude": ["node_modules", "typings", "dist", "build"]
}
